@page "/Login"
@model UniANPR.Areas.Identity.Pages.Account.LoginModel
@using Telerik.Blazor.Components

@{
    ViewData["Title"] = "Log in";
}

<div style="padding-bottom: 80px;">
    <img id="logo" src="~/images/TestLogo.png" /> <br/>

	<div class="loginContainer">

		<form class="login" id="account" method="post" asp-route-returnurl="@Model.ReturnUrl">
			<div class="field">
				<span class="bx bxs-user"></span>
				<input  asp-for="Input.Email" type="text" class="login__input" placeholder="Email">
			</div>
			<br/>
			<div class="field">
				<span class="bx bxs-lock"></span>
				<input  asp-for="Input.Password"  type="password" class="login__input" placeholder="Password">
			</div>

			<div asp-validation-summary="All"  class="userInfoLabelDanger"></div>   
			<br /> 

			<button style="width:200px; font-size: 18px; font-weight:400; cursor:pointer; margin-bottom: 10px;" class="threeSCButton">Log in</button> <br/> 

			<a class="forgotPas" id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
		</form>

	</div>
</div>






<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">UniANPR</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">

    <TelerikMenu Data="@MenuItems" 
                 Orientation="@MenuOrientation.Vertical" 
                 OnClick="@((MenuItem item) => OnClickHandler(item))">
        <ItemTemplate Context="item">
            <div class="menuItemContainer @item.Class">
                <span class="k-icon @(item.Icon)"></span>
                <span class="k-menu-link">@item.Text</span>
                @if (item.Items != null && item.Items.Count() > 0)
                {
                    <span class="k-icon k-i-caret-alt-right"></span>
                }
            </div>
        </ItemTemplate>
    </TelerikMenu>


